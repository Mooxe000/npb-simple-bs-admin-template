    // build:css styles/app.css
    link(href="styles/styles.css", rel="stylesheet")
    // endbuild

  body

    include ./widget/navbar

    // Main
    .container-fluid
      .row
        .col-sm-3

          include ./module/siderbar/index

        .col-sm-9

          include ./module/main/index

    include widget/footer

    // script references
    // build:js scripts/app.js
    script(src="scripts/libs/jquery.js")
    script(src="scripts/libs/bootstrap.js")
    script(src="scripts/scripts.js")
